<?xml version="1.0" encoding="UTF-8"?>
<!-- The plugin.dtd file is located in the OXYGEN_INSATALL_DIR/plugins directory -->
<!DOCTYPE plugin SYSTEM "../plugin.dtd">

<plugin
    id="com.oxygenxml.webapp.latex.LaxtexPlugin"
    name="Latex"
    description="Provides support for editing Latex equations"
    version="${project.nosnapshot.version}"
    vendor="Syncro Soft"
    class="com.oxygenxml.webapp.latex.LatexPlugin">
    <runtime>
      <librariesFolder name="lib"/>
      <library name="target/classes"/>
    </runtime>
    <extension type="AuthorStylesheet" href="resources/author.css"/>
    <extension type="WebappStaticResourcesFolder" path="resources/" href="latex"/>
</plugin>
